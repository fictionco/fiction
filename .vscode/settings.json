// Place your settings in this file to overwrite default and user settings.
{
  "editor.tabSize": 2,
  "files.associations": {
    "*.vue": "vue"
  },
  "search.useIgnoreFiles": false,
  "files.exclude": {},
  "search.exclude": {
    "**/factor_modules/**": true,
    "**/.factor/**": true,
    "**/cloud/**": true,

    "**/.ref": true,
    "*.lock": true,
    "*.log": true
  },
  "editor.fontFamily": "Operator mono, Menlo, Monaco, 'Courier New', monospace",
  "eslint.validate": [
    {
      "language": "vue",
      "autoFix": true
    },
    {
      "language": "html",
      "autoFix": true
    },
    {
      "language": "javascript",
      "autoFix": true
    },
    {
      "language": "json",
      "autoFix": true
    }
  ],
  "eslint.options": {
    "extensions": [".js", ".vue", ""]
  },
  "eslint.run": "onSave",
  "prettier.printWidth": 120,
  "prettier.semi": false,
  "editor.fontWeight": "600",
  "vetur.format.defaultFormatter.html": "prettyhtml",
  "eslint.autoFixOnSave": true,
  "editor.formatOnSave": true
}
